		</enableIf>
	</property>

	<property id="FlashBank3Sector0">
		<target>TMS470RDX</target>
		<name>Sector 0</name>
		<valueType>Boolean</valueType>
		<defaultValue>1</defaultValue>
		<enableIf>
			<property id="FlashEraseSelection">Selected Sectors Only</property>
		</enableIf>
	</property>
	<property id="FlashBank3Sector1">
		<target>TMS470RDX</target>
		<name>Sector 1</name>
		<valueType>Boolean</valueType>
		<defaultValue>1</defaultValue>
		<enableIf>
			<property id="FlashEraseSelection">Selected Sectors Only</property>
		</enableIf>
	</property>
	<property id="FlashBank3Sector2">
		<target>TMS470RDX</target>
		<name>Sector 2</name>
