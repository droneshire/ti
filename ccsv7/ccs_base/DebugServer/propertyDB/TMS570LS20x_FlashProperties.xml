		<valueType>Boolean</valueType>
		<defaultValue>1</defaultValue>
		<enableIf>
			<property id="FlashEraseSelection">Selected Sectors Only</property>
		</enableIf>
	</property>
	<property id="FlashBank2Sector3">
		<target>TMS470RDX</target>
		<name>Sector 3</name>
