		</enableIf>
		<action>for( var i = 0; DPActiveDebugSession.options.optionExist( "FlashBank3Sector" + i ); ++i ) { DPActiveDebugSession.options.setBoolean( "FlashBank3Sector" + i, !DPActiveDebugSession.options.getBoolean( "FlashBank3Sector" + i ) ); }</action>
	</property>
	
	<property id="FlashEraseButton">
		<target>TMS470RDX</target>
		<name>Erase Flash</name>
		<valueType>Button</valueType>
		<disableIf>
			<property id="FlashEraseSelection">Necessary Sectors Only (for Program Load)</property>
		</disableIf>
		<action>DPActiveDebugSession.flash.performOperation("Erase")</action>
	</property>
	
	<!-- fin -->
</PropertyList>
