		</enableIf>
	</property>
	
	<property id="FlashToggleBank0">
		<target>TMS470RDX</target>
		<name>Toggle Bank 0 Selection</name>
		<valueType>Button</valueType>
		<enableIf>
			<property id="FlashEraseSelection">Selected Sectors Only</property>
		</enableIf>
		<action>for( var i = 0; DPActiveDebugSession.options.optionExist( "FlashBank0Sector" + i ); ++i ) { DPActiveDebugSession.options.setBoolean( "FlashBank0Sector" + i, !DPActiveDebugSession.options.getBoolean( "FlashBank0Sector" + i ) ); }</action>
	</property>
	
	<property id="FlashToggleBank1">
		<target>TMS470RDX</target>
		<name>Toggle Bank 1 Selection</name>
		<valueType>Button</valueType>
		<enableIf>
			<property id="FlashEraseSelection">Selected Sectors Only</property>
		</enableIf>
		<action>for( var i = 0; DPActiveDebugSession.options.optionExist( "FlashBank1Sector" + i ); ++i ) { DPActiveDebugSession.options.setBoolean( "FlashBank1Sector" + i, !DPActiveDebugSession.options.getBoolean( "FlashBank1Sector" + i ) ); }</action>
	</property>
	
	<property id="FlashToggleBank2">
		<target>TMS470RDX</target>
		<name>Toggle Bank 2 Selection</name>
		<valueType>Button</valueType>
		<enableIf>
			<property id="FlashEraseSelection">Selected Sectors Only</property>
		</enableIf>
		<action>for( var i = 0; DPActiveDebugSession.options.optionExist( "FlashBank2Sector" + i ); ++i ) { DPActiveDebugSession.options.setBoolean( "FlashBank2Sector" + i, !DPActiveDebugSession.options.getBoolean( "FlashBank2Sector" + i ) ); }</action>
