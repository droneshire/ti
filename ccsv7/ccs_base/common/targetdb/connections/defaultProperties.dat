<!-- Paul Gingrich, 1st November 2007                                                                  -->
<!--                                                                                                   -->
<!-- There are three properties that control the generation of board.dat files: dataFileRequired,      -->
<!-- dataFile, and dataFileExtraConfig.  The following table shows all possible combinations.          -->
<!-- dataFileRequired is either Yes or No (default = Yes) and indicates if a board.dat file is needed. -->
<!-- dataFile, if it exists, is the relative path to the board.dat file to use.  If it doesn't exist,  -->
<!-- a board.dat file is automatically generated.  If a board.dat file is automatically generated, and -->
<!-- dataFileExtraConfig exists, then this is the relative path to the extra config file that will be  -->
<!-- included in the autogenerated board.dat file.  For the purposes of the table below, Yes or No     -->
<!-- indicates if the dataFile or dataFileExtraConfig exists or not, and X indicates don't care.       -->
<!--                                                                                                   -->
<!--                                              dataFileRequired    dataFile     dataFileExtraConfig -->
<!-- Use the custom board.dat provided                   Yes            Yes                 X          -->
<!-- Autogenerate board.dat with extra config file       Yes             No                Yes         -->
<!-- Autogenerate board.dat                              Yes             No                 No         -->
<!-- No board.dat is generated                            No             X                  X          -->
<!--                                                                                                   -->
<!-- The following are the properties for connections that require a board.dat file to configure the   -->
<!-- JTag scan chain.  If this is the case, include this file in you connection.xml file to give these -->
<!-- options to the user.  Otherwise, add the following property to your connection.xml file:          -->
<!--                                                                                                   -->
<!-- <property XML_version="1.2" Type="hiddenfield" id="dataFileRequired" Value="No"/>                 -->

<properties XML_version="1.2" id="default">
	<property XML_version="1.2" Type = "choicelist" id="dataFileRequired" desc="Board Data File" Value="0">
		<choice value="auto generate"/>
		<choice value="auto generate with extra config file">
			<property Type="filepathfield" Value="" id="dataFileExtraConfig" desc="Extra Config File" Extensions="Config Files (*.dat)|*.dat|All Files (*.*)|*.*||"/>
		</choice>
		<choice value="specify custom">
			<property Type="filepathfield" Value="" id="dataFile" desc="Custom Board.dat file" Extensions="Config Files (*.dat)|*.dat|All Files (*.*)|*.*||"/>
		</choice>
	</property>
</properties>

