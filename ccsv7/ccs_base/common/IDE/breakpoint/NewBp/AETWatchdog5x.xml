<?xml version="1.0" encoding="utf-8" ?> 
<newBreakpoint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="schema.xsd" name="Watchdog Timer" breakpointType="2">
	<targets>
		<target>
			<type>dsk,emu</type>
			<familyId>320</familyId>
			<subfamilyId>55,56</subfamilyId>
			<revision>*</revision>
		</target>
	</targets>

	<defaultProperty>
		<property name="Hardware Configuration.Type" value="Watchdog Timer"/>
		<property name="Miscellaneous.Name" value="Watchdog Timer"/>
	</defaultProperty>

	<submitSequence>
		<id>Hardware Configuration.Type.Expiration Time</id>
		<id>Hardware Configuration.Type.Start Location</id>
		<id>Hardware Configuration.Type.End Location</id>
	</submitSequence>

	<showIn>
		<breakpointView autoSubmit="false" />
	</showIn>

	<dialog colCount="2">
		<label id="label_expiration_time" widthHint="95" heightHint="18" verticalAlign="center" horizontalAlign="fill">
			<text>Expiration Time:</text>
		</label>
		
		<textBox id="Hardware Configuration.Type.Expiration Time" widthHint="190" heightHint="20" verticalAlign="center" horizontalAlign="center">
			<text>Enter expriration clock cycles...</text>
		</textBox>

		<label id="label_start_location" widthHint="95" heightHint="18" verticalAlign="center" horizontalAlign="fill">
			<text>Start Location:</text>
		</label>
		
		<textBox id="Hardware Configuration.Type.Start Location" widthHint="190" heightHint="20" verticalAlign="center" horizontalAlign="center">
			<text>Enter start program location here...</text>
		</textBox>

		<label id="label_end_location" widthHint="95" heightHint="18" verticalAlign="center" horizontalAlign="fill">
			<text>End Location:</text>
		</label>
		
		<textBox id="Hardware Configuration.Type.End Location" widthHint="190" heightHint="20" verticalAlign="center" horizontalAlign="center">
			<text>Enter end program location here...</text>
		</textBox>

	</dialog>
</newBreakpoint>
